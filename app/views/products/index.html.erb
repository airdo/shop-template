<div class="products">
  <% @products.each do |product| %>
  <a class="product__link" href=<%=product_path(product.id) %>>
  <div class="item">
    <p class="item__title"><%= product.title %></p>
    <figure>
      <img class= "item__image" src="<%=product.image_url%>" alt='Wallet Image'></img>
      <figcaption class="item__description"> <%= product.description %></figcaption>
    </figure>
    <p class="clearfix">
      <span class="item__price"><%=product.price%> руб. </span> 
      <a class="item__btn-to-cart" href="#">Add to cart</a>
    </p>
    
    <p class="text-center">
      <%= link_to 'Show', product %>
      <%= link_to 'Edit', edit_product_path(product) %>
      <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
    </p>
  </div>
  </a>
  <% end %>
  
</div>
    
      
      
      
      
    

